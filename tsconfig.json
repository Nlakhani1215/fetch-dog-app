{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "strict": true
  },
  "include": ["src"]
}
